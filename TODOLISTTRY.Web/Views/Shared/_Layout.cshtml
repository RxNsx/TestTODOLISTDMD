<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TODOLISTTRY.Web</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body id="ajaxupdating">
    <header class="header">
        <h3 class="text-center">
            @Html.ActionLink("TODOLIST","Index","Do")
        </h3>
        <div class="setLanguage">
            @await Html.PartialAsync("_SelectLanguagePartialView")
        </div>
    </header>
    <main>
        <div class="main_content d-flex flex-column flex-sm-row">
            <div class="col-12 col-sm-6 p-3">
                @await Component.InvokeAsync("DoMenu")
            </div>
            <div class="col-12 col-sm-6 p-3">
                @RenderBody()
            </div>
        </div>
    </main>
    <footer class="footer">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

