@model IEnumerable<DoDTO>
@inject IViewLocalizer WelcomeLocalizer


@if(Model.Count() > 0)
{
    <div class="welcome_text text-center">
        <h3>@WelcomeLocalizer["WelcomeTextHeader"]</h3>
        <p>@WelcomeLocalizer["WelcomeTextMessage"]</p>
    </div>
}
else
{
    <div class="welcome_text_empty text-center">
        <h3>@WelcomeLocalizer["WelcomeTextHeaderEmpty"]</h3>
        <p>@WelcomeLocalizer["WelcomeTextMessageEmpty"]</p>
        <div class="align-content-center">
            @Html.ActionLink($"{@WelcomeLocalizer["CreateButtonText"].Value}","CreateDoView","Do","",new {@class = "btn btn-primary"})
        </div>
    </div>
}